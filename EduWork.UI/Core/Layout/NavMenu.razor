@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">EduWork</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column h-100 d-flex justify-content-between">
        <div class="flex-column">
            <AuthorizeView Roles="Administrator">
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="worktime/admin" Match="NavLinkMatch.All">
                        <span class="bi bi-clock-nav-menu" aria-hidden="true"></span> Work Time
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" @onclick="ToggleSubMenu" Match="NavLinkMatch.All">
                        <span class="bi bi-folder-fill-nav-menu" aria-hidden="true"></span> Projects
                    </NavLink>
                    @if (SubMenuToggled)
                    {
                        <div class="sub-menu ms-2">
                            <div class="nav-item px-2">
                                <NavLink class="nav-link" href="projecttime/admin" Match="NavLinkMatch.All">
                                    <span class="bi bi-clock-nav-menu" aria-hidden="true"></span> Input project time
                                </NavLink>
                            </div>
                            <div class="nav-item px-2">
                                <NavLink class="nav-link" href="projecthistory/admin" Match="NavLinkMatch.All">
                                    <span class="bi bi-clock-history-nav-menu" aria-hidden="true"></span> History
                                </NavLink>
                            </div>
                            <div class="nav-item px-2">
                                <NavLink class="nav-link" href="projectstatistics/admin" Match="NavLinkMatch.All">
                                    <span class="bi bi-graph-up-nav-menu" aria-hidden="true"></span> Project statistics
                                </NavLink>
                            </div>
                        </div>
                    }   
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="users">
                        <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> Users
                    </NavLink>
                </div>
            </AuthorizeView>
            <AuthorizeView Roles="Employee">

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="worktime/employee" Match="NavLinkMatch.All">
                        <span class="bi bi-clock-nav-menu" aria-hidden="true"></span> Work Time
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" @onclick="ToggleSubMenu" Match="NavLinkMatch.All">
                        <span class="bi bi-folder-fill-nav-menu" aria-hidden="true"></span> Projects
                    </NavLink>
                    @if (SubMenuToggled)
                    {
                        <div class="sub-menu ms-2">
                            <div class="nav-item px-2">
                                <NavLink class="nav-link" href="projecttime/employee" Match="NavLinkMatch.All">
                                    <span class="bi bi-clock-nav-menu" aria-hidden="true"></span> Input project time
                                </NavLink>
                            </div>
                            <div class="nav-item px-2">
                                <NavLink class="nav-link" href="projecthistory/employee" Match="NavLinkMatch.All">
                                    <span class="bi bi-clock-history-nav-menu" aria-hidden="true"></span> History
                                </NavLink>
                            </div>
                            <div class="nav-item px-2">
                                <NavLink class="nav-link" href="projectstatistics/employee" Match="NavLinkMatch.All">
                                    <span class="bi bi-graph-up-nav-menu" aria-hidden="true"></span> Project statistics
                                </NavLink>
                            </div>
                        </div>
                    }
                </div>
                
            </AuthorizeView>
        </div>

        <div class="flex-column">
            <AuthorizeView>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@($"profiledetails/{context.User.Identity?.Name}")" Match="NavLinkMatch.All">
                        <span class="bi bi-person-nav-menu" aria-hidden="true"></span> My profile
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" @onclick="BeginLogOut" Match="NavLinkMatch.All">
                        <span class="bi bi-power-nav-menu" aria-hidden="true"></span> Log Out
                    </NavLink>
                </div>
            </AuthorizeView>
        </div>
    </nav>
</div>


@code {
    private bool collapseNavMenu = true;

    private bool SubMenuToggled = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    public void BeginLogOut()
    {
        Navigation.NavigateToLogout("authentication/logout");
    }

    private void ToggleSubMenu()
    {
        SubMenuToggled = !SubMenuToggled;
    }
}
