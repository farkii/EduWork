@page "/profiledetails/{Username}"


@inject HttpClient Http
@if (userProfile == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div>
        <div class="card m-1">
            <div class="card-header">
                <div class="d-flex flex-column justify-content-center">
                    <p><strong>Username: </strong> @userProfile.Username</p>
                    <p><strong>Email: </strong> @userProfile.Email</p>
                </div>
            </div>
        </div>
        <div class="d-flex flex-row">
            <div class="card m-1">
                <div class="card-header">
                    <p><strong>Projekti</strong></p>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Title</th>
                                <th scope="col">Start date</th>
                                <th scope="col">End date</th>
                                <th scope="col">Description</th>
                                <th scope="col">User role</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var project in userProfile.Projects)
                            {
                                <tr>
                                    <th scope="row">@project.Id</th>
                                    <td>@project.Title</td>
                                    <td>@project.StartDate</td>
                                    <td>@project.EndDate</td>
                                    <td>@project.Description</td>
                                    <td>@project.RoleName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <div class="d-flex flex-row">
                        <p><strong>Broj projekta: </strong> @userProfile.Projects.Count</p>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-column m-1">
                <div class="card m-1">
                    <div class="card-header">
                        <p><strong>Bolovanje</strong></p>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Start date</th>
                                    <th scope="col">End date</th>
                                    <th scope="col">Comment</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var record in userProfile.SickLeaveRecords)
                                {
                                    <tr>
                                        <th scope="row">@record.Id</th>
                                        <td>@record.StartDate</td>
                                        <td>@record.EndDate</td>
                                        <td>@record.Comment</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex flex-row">
                            <p><strong>Ukupan broj dana: </strong> @userProfile.Email</p>
                        </div>
                    </div>
                </div>

                <div class="card m-1">
                    <div class="card-header">
                        <p><strong>Godišnji</strong></p>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Start date</th>
                                    <th scope="col">End date</th>
                                    <th scope="col">Comment</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var record in userProfile.AnnualLeaveRecords)
                                {
                                    <tr>
                                        <th scope="row">@record.Id</th>
                                        <td>@record.StartDate</td>
                                        <td>@record.EndDate</td>
                                        <td>@record.Comment</td>
                                    </tr>
                                }    
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <p><strong>Ukupni godišnji za @(userProfile.AnnualLeave.Year). godinu: </strong>@userProfile.AnnualLeave.TotalLeaveDays</p>
                        <p><strong>Iskorišteno: </strong> @userProfile.AnnualLeave.LeaveDaysLeft</p>
                    </div>
                </div>
            </div>
        </div>     
    </div>
}

@code {

    [Parameter]
    public string Username { get; set; }

    private ProfileDetailsDto? userProfile;

    protected override async Task OnInitializedAsync()
    {
        userProfile = await Http.GetFromJsonAsync<ProfileDetailsDto>($"api/UserProfiles/username/{Username}");
    }

}
